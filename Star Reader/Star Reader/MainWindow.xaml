<Window x:Class="Star_Reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Star_Reader"
        mc:Ignorable="d"
        Title="Star Reader" Height="480" Width="720">
    <Grid>
        <TabControl x:Name="ContentTabs" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
            <TabItem Header="File Upload">
                <Grid>
                    <Button x:Name="UploadFileButton" x:FieldModifier="public" Click="ReadFile" Content="Upload File" Margin="0,10,0,0" Height="20" VerticalAlignment="Top" HorizontalAlignment="Center" Width="74"/>
                    <TextBox x:Name="FileContentBox" x:FieldModifier="public" Margin="10,40,10,5" TextWrapping="Wrap" Text="TextBox"/>
                </Grid>
            </TabItem>
            <TabItem Header="Something Else" IsEnabled="False">
            </TabItem>
            <TabItem Header="Something Else" IsEnabled="False">
            </TabItem>
            <TabItem Header="Something Else" IsEnabled="False">
            </TabItem>
            <TabItem Header="Something Else" IsEnabled="False">
            </TabItem>
        </TabControl>

    </Grid>
</Window>

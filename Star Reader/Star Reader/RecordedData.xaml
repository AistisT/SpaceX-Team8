<Window x:Class="Star_Reader.RecordedData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Star_Reader"
        mc:Ignorable="d"
        Title="SpaceWire - Recorded Packets" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <ScrollViewer Grid.IsSharedSizeScope="True" Width="250">
                <WrapPanel Name="PacketViewerA" />
            </ScrollViewer>
            <ScrollViewer Grid.IsSharedSizeScope="True" Width="250">
                <StackPanel Name="DetailedViewerA" />
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>

<Window x:Class="Star_Reader.RecordedData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Star_Reader"
        mc:Ignorable="d"
        Title="SpaceWire - Recorded Packets" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="0.01*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <ScrollViewer BorderThickness="25" >
            <WrapPanel Name="PacketViewerA" />
        </ScrollViewer>
        <ScrollViewer Grid.Column="1" BorderThickness="25" >
            <StackPanel Name="DetailedViewerA" />
        </ScrollViewer>
        <ScrollViewer Grid.Row="2" BorderThickness="25">
            <WrapPanel Name="PacketViewerB"/>
        </ScrollViewer>
        <ScrollViewer Grid.Column="1" Grid.Row="2" BorderThickness="25" >
            <StackPanel Name="DetailedViewerB" />
        </ScrollViewer>
    </Grid>
</Window>
